<UserControl x:Class="View.CreateAppointmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:View">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32">
            <!-- Form -->
            <Border Background="White" CornerRadius="16" Effect="{StaticResource CardShadow}">
                <StackPanel Margin="32">
                    <TextBlock Text="Tạo lịch hẹn mới" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock Text="Lập lịch hẹn cho bệnh nhân" FontSize="16" Foreground="Gray" Margin="0,0,0,32"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column -->
                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <!-- Patient Selection -->
                            <TextBlock Text="Bệnh nhân:" FontWeight="Bold" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                <ComboBox x:Name="PatientComboBox" Width="200" Height="40" Margin="0,0,8,0"
                                          DisplayMemberPath="FullName" SelectedValuePath="PatientId"
                                          Style="{StaticResource ModernComboBoxStyle}"/>
                                <Button Content="+" Width="40" Height="40" 
                                        Style="{StaticResource PrimaryButtonStyle}" 
                                        Click="AddNewPatient_Click" ToolTip="Thêm bệnh nhân mới"/>
                            </StackPanel>

                            <!-- Doctor Selection -->
                            <TextBlock Text="Bác sĩ:" FontWeight="Bold" Margin="0,0,0,8"/>
                            <ComboBox x:Name="DoctorComboBox" Height="40" Margin="0,0,0,20"
                                      DisplayMemberPath="FullName" SelectedValuePath="UserId"
                                      Style="{StaticResource ModernComboBoxStyle}"/>

                            <!-- Date Selection -->
                            <TextBlock Text="Ngày:" FontWeight="Bold" Margin="0,0,0,8"/>
                            <DatePicker x:Name="AppointmentDatePicker" Height="40" Margin="0,0,0,20"
                                       Style="{StaticResource ModernDatePickerStyle}"/>
                        </StackPanel>

                        <!-- Right Column -->
                        <StackPanel Grid.Column="1" Margin="16,0,0,0">
                            <!-- Time Selection -->
                            <TextBlock Text="Giờ:" FontWeight="Bold" Margin="0,0,0,8"/>
                            <ComboBox x:Name="TimeSlotComboBox" Height="40" Margin="0,0,0,20"
                                      Style="{StaticResource ModernComboBoxStyle}"/>

                            <!-- Reason -->
                            <TextBlock Text="Lý do khám:" FontWeight="Bold" Margin="0,0,0,8"/>
                            <TextBox x:Name="ReasonTextBox" Height="80" TextWrapping="Wrap" 
                                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                                     Margin="0,0,0,20" Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="Hủy" Style="{StaticResource SecondaryButtonStyle}" 
                                Width="100" Margin="0,0,12,0" Click="Cancel_Click"/>
                        <Button Content="Tạo lịch hẹn" Style="{StaticResource PrimaryButtonStyle}" 
                                Width="150" Click="CreateAppointment_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl> 