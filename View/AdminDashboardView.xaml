<UserControl x:Class="View.AdminDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:View"
    Background="#F4F8FB">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar -->
        <Border Grid.Column="0" CornerRadius="0,24,24,0" Padding="0,0,0,0" Effect="{StaticResource CardShadow}" Margin="0,0,12,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF19BDD2" Offset="0"/>
                    <GradientStop Color="#42A5F5" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="0,32,0,0">
                <TextBlock Text="Hospital" FontSize="26" FontWeight="Bold" Foreground="White" Margin="32,0,0,32"/>
                <Button x:Name="BtnDashboard" Content="Dashboard" Style="{StaticResource SidebarButtonStyle}" Margin="24,0,24,12" Click="BtnDashboard_Click"/>
                <Button x:Name="BtnSalaryReport" Content="Báo cáo lương" Style="{StaticResource SidebarButtonStyle}" Margin="24,0,24,12" Click="BtnSalaryReport_Click"/>
                <Button x:Name="BtnDoctorProfile" Content="Hồ sơ bác sĩ" Style="{StaticResource SidebarButtonStyle}" Margin="24,0,24,12" Click="BtnDoctorProfile_Click"/>
                <Button x:Name="BtnPatientManagement" Content="Quản lý bệnh nhân" Style="{StaticResource SidebarButtonStyle}" Margin="24,0,24,12" Click="BtnPatientManagement_Click"/>
                <Button x:Name="BtnAppointment" Content="Lịch hẹn" Style="{StaticResource SidebarButtonStyle}" Margin="24,0,24,12" Click="BtnAppointment_Click"/>
                <TextBlock Text="© 2024 Hospital" Foreground="#B3E5FC" FontSize="12" Margin="32,64,0,0"/>
            </StackPanel>
        </Border>
        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Border Grid.Row="0" Background="#FF19BDD2" Padding="32,14,32,14" CornerRadius="0,0,16,16" Effect="{StaticResource CardShadow}">
                <TextBlock x:Name="HeaderText" Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="White"/>
            </Border>
            <!-- Content -->
            <ContentControl x:Name="MainContent" Grid.Row="1" Margin="0,0,0,0"/>
        </Grid>
    </Grid>
</UserControl> 