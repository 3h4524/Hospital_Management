<UserControl x:Class="View.DoctorWorkReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Blue theme styles -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#1E3A8A"/>
        <SolidColorBrush x:Key="SecondaryBlueBrush" Color="#3B82F6"/>
        <SolidColorBrush x:Key="LightBlueBrush" Color="#EFF6FF"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="#60A5FA"/>

        <!-- Button Style -->
        <Style x:Key="BlueButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="BlueDatePickerStyle" TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBlueBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="BlueDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBlueBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource LightBlueBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource LightBlueBrush}"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="HeaderCenterTextStyle" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBlueBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="BlueDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBlueBrush}"
                Padding="20, 15">
            <TextBlock Text="Tổng kết cuối tháng"
                       FontSize="24"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="White"
                Padding="20, 15">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Text="Month" Margin="0,15,10,0" VerticalAlignment="Center"/>
                <ComboBox x:Name="MonthComboBox" Margin="0,5" Width="200" SelectionChanged="MonthComboBox_SelectionChanged">
                    <ComboBoxItem Content="January"/>
                    <ComboBoxItem Content="February"/>
                    <ComboBoxItem Content="March"/>
                    <ComboBoxItem Content="April"/>
                    <ComboBoxItem Content="May"/>
                    <ComboBoxItem Content="June"/>
                    <ComboBoxItem Content="July"/>
                    <ComboBoxItem Content="August"/>
                    <ComboBoxItem Content="September"/>
                    <ComboBoxItem Content="October"/>
                    <ComboBoxItem Content="November"/>
                    <ComboBoxItem Content="December"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <DataGrid x:Name="DoctorScheduleReportsDataGrid" 
                  Grid.Row="2" 
                  Style="{StaticResource BlueDataGridStyle}"
                  CellStyle="{StaticResource BlueDataGridCellStyle}"
                  ItemsSource="{Binding DoctorScheduleReports}"
                  ColumnHeaderStyle="{StaticResource HeaderCenterTextStyle}"
                  Margin="0,0,0,0">
            <DataGrid.Resources>
                <Style x:Key="CenterTextStyle" TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ và tên" Binding="{Binding DoctorName}" Width="*" FontWeight="SemiBold"/>
                <DataGridTextColumn Header="Số ngày làm" Binding="{Binding TotalDaysWorked}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Số giờ làm" Binding="{Binding TotalWorkingHours}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Số giờ đi trễ" Binding="{Binding TotalLateHours}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Số ngày nghỉ" Binding="{Binding TotalDaysOff}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Tổng thưởng" Binding="{Binding TotalRewardAmount}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTextColumn Header="Tổng phạt" Binding="{Binding TotalPenaltyAmount}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                <DataGridTemplateColumn Header="Chi tiết" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Xem chi tiết" 
                                    Style="{StaticResource BlueButtonStyle}" 
                                    Click="ViewDetailsButton_Click"
                                    Margin="5"
                                    Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Popup x:Name="ViewDetailReports" Placement="Center" AllowsTransparency="True" PopupAnimation="Fade">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gray"/>
                </Border.Effect>
                <StackPanel Width="600">
                    <TextBlock FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center">
                        <Run Text="Chi tiết lịch làm việc - "/>
                        <Run Text="{Binding SelectedDoctorName}"/>
                    </TextBlock>
                    <DataGrid Style="{StaticResource BlueDataGridStyle}"
                              CellStyle="{StaticResource BlueDataGridCellStyle}"
                              ItemsSource="{Binding DailyScheduleReportResponses}"
                              ColumnHeaderStyle="{StaticResource HeaderCenterTextStyle}"
                              Margin="0,0,0,10">
                        <DataGrid.Resources>
                            <Style x:Key="CenterTextStyle" TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ngày" Binding="{Binding WorkDate}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                            <DataGridTextColumn Header="Số giờ làm" Binding="{Binding WorkingHours}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                            <DataGridTextColumn Header="Số giờ đi trễ" Binding="{Binding LateHours}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Đóng" 
                            Style="{StaticResource BlueButtonStyle}" 
                            Click="ClosePopupButton_Click"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0"
                            Padding="15,8"/>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>