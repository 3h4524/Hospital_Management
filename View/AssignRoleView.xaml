<UserControl x:Class="View.AssignRoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="1065.898"
             Background="#F4FAFF">
    <Border Background="White" CornerRadius="12" Padding="25" Margin="24" BorderBrush="#3399FF" BorderThickness="1.5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#90CAF9"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <StackPanel Orientation="Vertical" Grid.Row="0">
                <TextBlock Text="Gán Vai Trò Người Dùng"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#007ACC"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- DataGrid -->
                <DataGrid x:Name="UsersDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          Height="300"
                          Margin="0,0,0,10"
                          Background="White"
                          BorderBrush="#B3D7FF"
                          BorderThickness="1"
                          AlternatingRowBackground="#EAF6FF"
                          RowBackground="White"
                          ColumnHeaderHeight="40"
                          FontSize="14"
                          RowHeight="38">
                    <DataGrid.Resources>
                        <!-- Header style -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="BorderBrush" Value="#B3D7FF"/>
                        </Style>
                        <!-- Cell style -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderBrush" Value="#D0EAFD"/>
                            <Setter Property="Padding" Value="6,2"/>
                        </Style>
                        <!-- ComboBox style -->
                        <Style TargetType="ComboBox">
                            <Setter Property="BorderBrush" Value="#3399FF"/>
                            <Setter Property="Padding" Value="4,2"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="2*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" Width="2*" IsReadOnly="True"/>
                        <DataGridTemplateColumn Header="Vai trò" Width="1.5*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox x:Name="RoleComboBox"
                                              SelectedItem="{Binding Role, UpdateSourceTrigger=PropertyChanged}"
                                              Tag="{Binding UserId}">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                                <sys:String>Receptionist</sys:String>
                                                <sys:String>Doctor</sys:String>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- Message -->
            <TextBlock x:Name="MessageTextBlock"
                       Grid.Row="1"
                       Margin="0,12,0,8"
                       HorizontalAlignment="Center"
                       Foreground="Red"
                       FontSize="14"
                       TextWrapping="Wrap"/>

            <!-- Button -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"
                        Grid.Row="2">
                <Button Content="Gán vai trò"
                        Click="AssignRoleButton_Click"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="12,4"
                        Width="140"
                        Height="36"
                        BorderThickness="0"
                        Cursor="Hand"
                        />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
