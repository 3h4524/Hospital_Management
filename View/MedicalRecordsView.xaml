<UserControl x:Class="View.MedicalRecordsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:View">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32">
            <!-- Header -->
            <Border Background="White" CornerRadius="16" Effect="{StaticResource CardShadow}">
                <StackPanel Margin="32">
                    <TextBlock Text="Phiếu chỉ định khám bệnh" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBlock Text="Xem tất cả phiếu chỉ định đã tạo" FontSize="16" Foreground="Gray" Margin="0,0,0,32"/>

                    <!-- Search and Filter -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="SearchTextBox" Grid.Column="0" Height="40" 
                                 Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,12,0"
                                 Text="Nhập tên hoặc SĐT bệnh nhân..." Foreground="Gray"
                                 GotFocus="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus"/>
                        
                        <Button Content="Tìm kiếm" Grid.Column="1" Width="100" Height="40" 
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,12,0" Click="Search_Click"/>
                        
                        <Button Content="Kết thúc" Grid.Column="2" Width="100" Height="40" 
                                Style="{StaticResource SecondaryButtonStyle}" Click="Finish_Click"/>
                    </Grid>

                    <!-- Medical Records List -->
                    <ItemsControl x:Name="MedicalRecordsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="12" Margin="0,0,0,16" 
                                        Effect="{StaticResource CardShadow}">
                                    <Grid Margin="20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Header -->
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="{Binding PatientName}" FontSize="18" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding PatientPhone, StringFormat='SĐT: {0}'}" FontSize="14" Foreground="#1976D2" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding AppointmentDate}" FontSize="14" Foreground="Gray"/>
                                        </StackPanel>

                                        <!-- Appointment ID -->
                                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                            <TextBlock Text="Mã lịch hẹn:" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding AppointmentId}" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Specialization -->
                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                            <TextBlock Text="Chuyên khoa:" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding SpecializationName}" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Diagnosis -->
                                        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                            <TextBlock Text="Chẩn đoán:" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Diagnosis}" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Notes -->
                                        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                            <TextBlock Text="Ghi chú:" FontWeight="Bold" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Created Date -->
                                        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" Margin="0,12,0,0" 
                                                   Text="{Binding CreatedAt}" FontSize="12" Foreground="Gray"/>

                                        <!-- Edit Button -->
                                        <Button Grid.Row="6" Grid.Column="1" Content="Chỉnh sửa" 
                                                Style="{StaticResource PrimaryButtonStyle}" Width="100" Height="30"
                                                Margin="0,12,0,0" Click="EditRecord_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- No Records Message -->
                    <TextBlock x:Name="NoRecordsText" Text="Không có phiếu chỉ định nào" 
                               FontSize="18" HorizontalAlignment="Center" Foreground="Gray" 
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl> 