<UserControl x:Class="View.ResetPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:View"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
    mc:Ignorable="d">
    <Border Width="320" Height="530" Background="White" CornerRadius="8" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Color="Gray"/>
        </Border.Effect>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Reset Password" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Reset Code" Grid.Row="0" HorizontalAlignment="Left" Margin="0,15"/>
                <TextBox Grid.Row="1" Margin="0,5" Width="255" BorderThickness="0,0,0,1" HorizontalAlignment="Left"
                         Text="{Binding ResetCode, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                <TextBlock Text="New Password" Grid.Row="2" HorizontalAlignment="Left" Margin="0,15"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="3" Width="255" Margin="0,5" BorderThickness="0,0,0,1"
                             LostFocus="PwdChanged"/>
                <TextBlock Text="{Binding PasswordError, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Grid.Row="4" Foreground="Red" HorizontalAlignment="Left"/>
                <TextBlock Text="Confirm Password" Grid.Row="5" Width="255" Margin="0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="6" Width="255" Margin="0,5" BorderThickness="0,0,0,1"
                             LostFocus="ConfPwdChanged"/>
                <TextBlock Grid.Row="7" Text="{Binding ConfirmPasswordError, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
                <TextBlock Grid.Row="8" Margin="0,5" Text="{Binding Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="Red" TextWrapping="Wrap"/>
            </Grid>
            <Button Content="Reset Password" Background="Black" Foreground="White"
                    Height="36" Margin="0,30,0,10" Width="200" Click="Button_Click"/>
            <TextBlock Text="Back to Login" Cursor="Hand" Margin="0,10,0,0" HorizontalAlignment="Center"
                       TextDecorations="Underline" MouseDown="GoLogin"/>

        </StackPanel>
    </Border>
</UserControl>