<UserControl x:Class="View.AttendanceTrackingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1400"
             Background="#F4FAFF">

    <Border Background="White" CornerRadius="12" Padding="24" Margin="24" BorderBrush="#3399FF" BorderThickness="1.5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#90CAF9"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Quản lý chấm công"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#007ACC"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding Path=User.FullName}"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Các nút chức năng -->
            <DockPanel Grid.Row="1" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Content="Check-in"
                            Click="CheckInButton_Click"
                            Width="110"
                            Background="#28A745"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Padding="8,4"
                            Cursor="Hand"
                            BorderThickness="0"/>

                    <Button Content="Check-out"
                            Click="CheckOutButton_Click"
                            Width="110"
                            Background="#DC3545"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Padding="8,4"
                            Cursor="Hand"
                            BorderThickness="0"/>

                    <Button Content="Làm mới"
                            Click="RefreshButton_Click"
                            Width="110"
                            Background="#007ACC"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Padding="8,4"
                            Cursor="Hand"
                            BorderThickness="0"/>
                </StackPanel>
            </DockPanel>

            <!-- Bảng dữ liệu -->
            <DataGrid x:Name="AttendanceDataGrid"
                      Grid.Row="2"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Background="White"
                      BorderBrush="#B3D7FF"
                      BorderThickness="1"
                      AlternatingRowBackground="#EAF6FF"
                      RowBackground="White"
                      RowHeight="38"
                      ColumnHeaderHeight="40"
                      FontSize="14">

                <DataGrid.Resources>
                    <!-- Header style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="BorderBrush" Value="#B3D7FF"/>
                    </Style>
                    <!-- Cell style -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="#D0EAFD"/>
                        <Setter Property="Padding" Value="6,2"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ngày" Binding="{Binding WorkDate}" Width="*" />
                    <DataGridTextColumn Header="Giờ vào" Binding="{Binding CheckInTime}" Width="*" />
                    <DataGridTextColumn Header="Giờ ra" Binding="{Binding CheckOutTime}" Width="*" />
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
