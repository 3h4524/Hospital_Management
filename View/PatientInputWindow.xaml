<Window x:Class="View.PatientInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm bệnh nhân mới" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Thông tin bệnh nhân mới" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Form with ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15">
            <StackPanel>
                <!-- Full Name -->
                <TextBlock Text="Họ và tên:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox" Height="35" Margin="0,0,0,12"
                         Style="{StaticResource ModernTextBoxStyle}"/>

                <!-- Phone Number -->
                <TextBlock Text="Số điện thoại:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneNumberTextBox" Height="35" Margin="0,0,0,12"
                         Style="{StaticResource ModernTextBoxStyle}"/>

                <!-- Email -->
                <TextBlock Text="Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Height="35" Margin="0,0,0,12"
                         Style="{StaticResource ModernTextBoxStyle}"/>

                <!-- Gender -->
                <TextBlock Text="Giới tính:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="GenderComboBox" Height="35" Margin="0,0,0,12"
                          Style="{StaticResource ModernComboBoxStyle}">
                    <ComboBoxItem Content="Nam" Tag="MALE" IsSelected="True"/>
                    <ComboBoxItem Content="Nữ" Tag="FEMALE"/>
                    <ComboBoxItem Content="Khác" Tag="OTHER"/>
                </ComboBox>

                <!-- Address -->
                <TextBlock Text="Địa chỉ:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="AddressTextBox" Height="80" TextWrapping="Wrap" 
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                         Style="{StaticResource ModernTextBoxStyle}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hủy" Style="{StaticResource SecondaryButtonStyle}" 
                    Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Lưu" Style="{StaticResource PrimaryButtonStyle}" 
                    Width="80" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window> 