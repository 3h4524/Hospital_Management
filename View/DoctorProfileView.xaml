<UserControl x:Class="View.DoctorProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:View"
        Background="#F8FAFF"
        FontFamily="Segoe UI, Arial, sans-serif">
    <Grid>
        <Border Background="#fff" CornerRadius="12" Padding="24" Margin="24">
            <StackPanel>
                <TextBlock Text="DANH SÁCH BÁC SĨ" FontWeight="Bold" FontSize="26" Foreground="#2D3A4A" Margin="0,0,0,24"/>
                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                    <TextBlock Text="Chuyên khoa:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding Specializations}" SelectedItem="{Binding SelectedSpecialization}" Width="180" Margin="0,0,16,0"/>
                    <TextBlock Text="Tìm kiếm:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>
                <DataGrid ItemsSource="{Binding Doctors}" AutoGenerateColumns="False" CanUserAddRows="False"
                          RowBackground="#FFFFFF" AlternatingRowBackground="#F0F4FF" FontSize="15" 
                          ColumnHeaderHeight="36" RowHeight="32" 
                          BorderBrush="#E0E6F8" BorderThickness="1" 
                          HeadersVisibility="Column" 
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                        <DataGridTextColumn Header="SĐT" Binding="{Binding PhoneNumber}" Width="120"/>
                        <DataGridTextColumn Header="Chuyên khoa" Binding="{Binding Specialization}" Width="150"/>
                        <DataGridTextColumn Header="Lương cơ bản" Binding="{Binding BaseSalary, StringFormat='{}{0:N0} VNĐ'}" Width="120"/>
                        <DataGridTextColumn Header="Ngày vào làm" Binding="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>
                        <DataGridTextColumn Header="Trạng thái" Binding="{Binding IsActive, Converter={StaticResource StringToVisibilityConverter}}" Width="100"/>
                        <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="80"/>
                        <DataGridTextColumn Header="Bằng cấp" Binding="{Binding Degree}" Width="120"/>
                        <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="180"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 