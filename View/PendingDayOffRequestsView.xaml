<UserControl x:Class="View.PendingDayOffRequestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:View"
             d:DesignWidth="831.4">

    <UserControl.Resources>
        <Style x:Key="CellTextPaddingStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="83,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Border Background="White"
            CornerRadius="12"
            Padding="24"
            Margin="20"
            BorderBrush="#007ACC"
            BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Pending Day Off Requests"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#007ACC"
                       Margin="0,0,0,20"/>

            <TextBlock Text="{Binding Message}"
                       Foreground="Red"
                       FontStyle="Italic"
                       Margin="0,0,0,10"/>

            <DataGrid ItemsSource="{Binding PendingRequests}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="400"
                      RowBackground="White"
                      AlternatingRowBackground="#F0F8FF"
                      GridLinesVisibility="None"
                      ColumnHeaderHeight="36"
                      HeadersVisibility="Column"
                      BorderBrush="#007ACC"
                      BorderThickness="1"
                      Margin="0,0,0,10">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#007ACC"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="36"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Doctor Name"
                                        Binding="{Binding Doctor.FullName}"
                                        Width="*"
                                        ElementStyle="{StaticResource CellTextPaddingStyle}" />

                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Doctor.Email}"
                                        Width="*"
                                        ElementStyle="{StaticResource CellTextPaddingStyle}" />

                    <DataGridTextColumn Header="Date"
                                        Binding="{Binding WorkDate}"
                                        Width="*"
                                        ElementStyle="{StaticResource CellTextPaddingStyle}" />

                    <DataGridTextColumn Header="Start Time"
                                        Binding="{Binding StartTime}"
                                        Width="*"
                                        ElementStyle="{StaticResource CellTextPaddingStyle}" />

                    <DataGridTextColumn Header="End Time"
                                        Binding="{Binding EndTime}"
                                        Width="*"
                                        ElementStyle="{StaticResource CellTextPaddingStyle}" />

                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding Status}"
                                        Width="*"
                                        ElementStyle="{StaticResource CellTextPaddingStyle}" />

                    <DataGridTemplateColumn Header="Actions" Width="160">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Duyệt"
                                            Margin="4,0"
                                            Padding="6,2"
                                            Height="28"
                                            VerticalAlignment="Center"
                                            Click="Approve_Click"
                                            Tag="{Binding}"
                                            Background="#007ACC"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"/>
                                    <Button Content="Từ chối"
                                            Margin="4,0"
                                            Padding="6,2"
                                            Height="28"
                                            VerticalAlignment="Center"
                                            Click="Reject_Click"
                                            Tag="{Binding}"
                                            Background="#D9534F"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>
        </StackPanel>
    </Border>
</UserControl>
