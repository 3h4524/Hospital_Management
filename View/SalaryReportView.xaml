<UserControl x:Class="View.SalaryReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:View"
        Background="#F4F8FB">
    <Grid>
        <StackPanel Margin="0">
            <Border Background="White" CornerRadius="16" Margin="0,0,0,16" Padding="24" Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="BÁO CÁO LƯƠNG BÁC SĨ" FontSize="28" FontWeight="Bold" Foreground="#1976D2"/>
                    <TextBlock Text="Quản lý và theo dõi lương bác sĩ theo tháng" FontSize="14" Foreground="#607D8B" Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
            <Border Background="White" CornerRadius="16" Margin="0,0,0,0" Padding="24" Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <!-- Filter Row -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Center">
                        <TextBlock Text="Tháng:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth}" Width="80" Margin="0,0,16,0"/>
                        <TextBlock Text="Năm:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear}" Width="100"/>
                        <Button Content="Tải báo cáo" Style="{StaticResource PrimaryButtonStyle}" Margin="24,0,0,0" Command="{Binding LoadReportCommand}"/>
                        <Button Content="Xuất file" Style="{StaticResource PrimaryButtonStyle}" Margin="8,0,0,0"/>
                    </StackPanel>
                    <!-- DataGrid -->
                    <DataGrid ItemsSource="{Binding Salaries}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              RowBackground="#FFFFFF"
                              AlternatingRowBackground="#F8FAFF"
                              BorderBrush="#E0E6F8"
                              BorderThickness="1"
                              FontSize="14"
                              RowHeight="40"
                              ColumnHeaderHeight="45">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Họ tên" Binding="{Binding DoctorName}" Width="*" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="Lương cơ bản" Binding="{Binding BaseSalary, StringFormat='{}{0:N0} VNĐ'}" Width="150"/>
                            <DataGridTextColumn Header="Số ngày làm" Binding="{Binding WorkDays}" Width="120"/>
                            <DataGridTextColumn Header="Thưởng" Binding="{Binding Bonus, StringFormat='{}{0:N0} VNĐ'}" Width="120"/>
                            <DataGridTextColumn Header="Phạt" Binding="{Binding Penalty, StringFormat='{}{0:N0} VNĐ'}" Width="120"/>
                            <DataGridTextColumn Header="Thuế" Binding="{Binding TaxAmount, StringFormat='{}{0:N0} VNĐ'}" Width="120"/>
                            <DataGridTextColumn Header="Tổng lương" Binding="{Binding TotalSalary, StringFormat='{}{0:N0} VNĐ'}" Width="150" FontWeight="Bold"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl> 