<UserControl x:Class="View.DoctorSchedulesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:View">
    <UserControl.Resources>
        <local:MonthConverter x:Key="MonthConverter"/>
        <local:MonthNameConverter x:Key="MonthNameConverter"/>
        <Style x:Key="CalendarDayStyle" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Day}" Value="0">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HasOnlyAvailableSchedules}" Value="True">
                    <Setter Property="Background" Value="LightGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HasOnlyBookedSchedules}" Value="True">
                    <Setter Property="Background" Value="LightCoral"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding HasMixedSchedules}" Value="True">
                    <Setter Property="Background" Value="Yellow"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Width="600" Height="750" Background="White" CornerRadius="8" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gray"/>
        </Border.Effect>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Doctor Schedule Calendar" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Grid VerticalAlignment="Top" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Doctor ID" Grid.Row="0" Grid.Column="0" Margin="0,15,10,0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="0,5" Width="200" BorderThickness="0,0,0,1" 
                         Text="{Binding DoctorId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Month" Grid.Row="1" Grid.Column="0" Margin="0,15,10,0" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,5" Width="200" SelectedIndex="{Binding SelectedMonth, Converter={StaticResource MonthConverter}}">
                    <ComboBoxItem Content="January"/>
                    <ComboBoxItem Content="February"/>
                    <ComboBoxItem Content="March"/>
                    <ComboBoxItem Content="April"/>
                    <ComboBoxItem Content="May"/>
                    <ComboBoxItem Content="June"/>
                    <ComboBoxItem Content="July"/>
                    <ComboBoxItem Content="August"/>
                    <ComboBoxItem Content="September"/>
                    <ComboBoxItem Content="October"/>
                    <ComboBoxItem Content="November"/>
                    <ComboBoxItem Content="December"/>
                </ComboBox>

                <TextBlock Text="Year" Grid.Row="2" Grid.Column="0" Margin="0,15,10,0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="0,5" Width="200" BorderThickness="0,0,0,1" 
                         Text="{Binding SelectedYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Content="Load Calendar" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                        Command="{Binding LoadSchedulesCommand}" Background="Black" Foreground="White"
                        Height="36" Margin="0,20,0,10" Width="200"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Message}" 
                           Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="&lt;" Command="{Binding PreviousMonthCommand}" Width="30" Height="30"/>
                <TextBlock FontSize="18" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}, {1}">
                            <Binding Path="SelectedMonth" Converter="{StaticResource MonthNameConverter}"/>
                            <Binding Path="SelectedYear"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <Button Content="&gt;" Command="{Binding NextMonthCommand}" Width="30" Height="30"/>
            </StackPanel>
            <Grid Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <UniformGrid Columns="7" Margin="0,0,0,10">
                    <TextBlock Text="Sun" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Mon" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Tue" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Wed" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Thu" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Fri" TextAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="Sat" TextAlignment="Center" FontWeight="Bold"/>
                </UniformGrid>
                <ItemsControl Grid.Row="1" ItemsSource="{Binding CalendarDays}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CalendarDayStyle}">
                                <TextBlock Text="{Binding Day}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,5,0,0"/>
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="{Binding ScheduleDetails}" TextWrapping="Wrap" MaxWidth="200"/>
                                </ToolTipService.ToolTip>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Border Background="LightGreen" Width="20" Height="20" Margin="5"/>
                <TextBlock Text="Available slots" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Border Background="LightCoral" Width="20" Height="20" Margin="5"/>
                <TextBlock Text="Fully booked" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Border Background="Yellow" Width="20" Height="20" Margin="5"/>
                <TextBlock Text="Partially booked" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>